{% extends 'base.html.twig' %}

{% block title %}Edit Employee{% endblock %}

{% block style %}
<style>
    body{
        background-color: #fff;
    }
</style>

{% endblock %}

{% block body %}
<img src="/assets/images/employee/edit/editnl.jpg" width="100%" height="500" alt="retour">
<h1 style="text-align: center; 
            font-weight: bold; 
            padding-top: 30px;
            padding-bottom: 40px;
            color: #fec208;
            text-shadow: 2px 1px #000;">Modification d'information de {{ employee.prenom }}
</h1>

<div class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-xs-10 col-md-5  ">
                {{ include('employee/_form.html.twig', {'button_label': 'Modifier'}) }}   <br>
                {{ include('employee/_delete_form.html.twig') }} <br>
                <a href="{{ path('employee_index') }}" class="btn btn-secondary btn-lg btn-block">Retour</a>
            </div>
            <div class="col-md-7" style="text-align: center;padding-top:70px;">
                <marquee><img src="/assets/images/employee/edit/modif.jpg" width="100%" height="700" alt="retour">
                </marquee></div>
        </div>
    </div>
</div>

{% endblock %}
